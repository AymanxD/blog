---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import { fetchBlogPosts } from '../services/blogApi';
import type { BlogPost } from '../types/blog';

let posts: BlogPost[] = [];
let error: string | null = null;

try {
  const response = await fetchBlogPosts(1, 6);
  posts = response.posts;
} catch (e) {
  error = e instanceof Error ? e.message : 'Failed to load posts';
}
---

<BaseLayout title="Blog - Home">
  <section class="hero">
    <h1>Welcome to the Blog</h1>
    <p>Discover the latest articles and insights</p>
  </section>

  <section class="recent-posts">
    <h2>Recent Posts</h2>
    {error ? (
      <div class="error">
        <p>Unable to load posts: {error}</p>
        <p>Please make sure the backend API is running.</p>
      </div>
    ) : posts.length > 0 ? (
      <div class="posts-grid">
        {posts.map((post) => (
          <PostCard post={post} />
        ))}
      </div>
    ) : (
      <p class="no-posts">No posts available yet.</p>
    )}
    <a href="/posts" class="view-all">View all posts â†’</a>
  </section>
</BaseLayout>

<style>
  .hero {
    text-align: center;
    padding: 4rem 0;
    background: linear-gradient(135deg, var(--color-background-alt) 0%, var(--color-background) 100%);
    border-radius: 12px;
    margin-bottom: 3rem;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .hero p {
    font-size: 1.25rem;
    color: var(--color-text-light);
  }

  .recent-posts h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .error {
    background-color: #fef2f2;
    border: 1px solid #fecaca;
    border-radius: 8px;
    padding: 1.5rem;
    color: #991b1b;
    margin-bottom: 2rem;
  }

  .no-posts {
    text-align: center;
    color: var(--color-text-light);
    padding: 3rem;
    background-color: var(--color-background-alt);
    border-radius: 8px;
    margin-bottom: 2rem;
  }

  .view-all {
    display: inline-block;
    font-weight: 500;
    font-size: 1.125rem;
  }
</style>
